

{% extends 'base-authenticated.html.twig' %}

{% block title %}{% trans %}Feed{% endtrans %}{% endblock %}

{% block content %}

    <!-- New post -->
    <div class="card mb-4">
        <div class="card-body">
            <h2>New Post</h2>
            {{ form_start(post_form) }}

            <div class="form-row">
                <div class="form-group col-md-12">
                    {{ form_errors(post_form.content) }}
                    {{ form_widget(post_form.content, { 'attr': { 'class': 'form-control', 'rows': 5}}) }}
                </div>

                <div class="form-group col-md-12">
                    {{ form_errors(post_form.image) }}
                    {{ form_widget(post_form.image) }}
                    <button class="btn btn-lg btn-success float-right" type="submit">Publish</button>
                </div>

            </div>

            {{ form_end(post_form) }}

        </div>
    </div>

    {% for post in posts %}

        {% include 'feed/post.html.twig' %}

    {% endfor %}

{% endblock %}
