<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-2">
                <p class="text-secondary text-center">{{ comment.addDate|date('d.m.Y H:i') }}</p>
            </div>
            <div class="col-md-10">
                <p>
                    <a class="float-left" href="{{ path('profile_show', {'id': post.user.getId}) }}"><strong>{{ post.user.getUsername }}</strong></a>
                </p>
                <div class="clearfix"></div>
                <p>{{ comment.content|nl2br }}</p>
                <p>
                    <a class="float-right btn text-white btn-danger comment-like-btn" post-comment-id="{{ comment.getId }}"> <i class="like-count">{{ comment.getLikesCount > 0 ? comment.getLikesCount : "" }}</i> <i class="fa fa-heart"></i> Like</a>
                </p>
            </div>
        </div>
    </div>
</div>